{
  "manifest_version": 3,
  "name": "retort.ai",
  "version": "1.0",
  "description": "Instant AI replies for smarter conversations.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
